
@model MyBlog.Models.Classes.Comment

    @{
        ViewBag.Title = "CommetGet";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>Yorum Güncelleme Sayfası</h2>
    <br />

    @using (Html.BeginForm("CommetUpdate", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
        <br />
        @Html.LabelFor(x => x.UserName)
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Mail)
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.Comments)
        @Html.TextAreaFor(x => x.Comments, 15, 1, new { @class = "form-control" })
        <br />
        <button class="btn btn-success"> Yorum Guncelle</button>
    }