
@using MyBlog.Models.Classes;
@model List<Comment>

@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model) {
<tr>
    <td>@x.Id</td>
    <td>@x.UserName</td>
    <td>@x.Mail</td>
    <td>@x.Comments</td>
    <td>@x.Blogid</td>
    <th><a href="/Admin/DeleteComment/@x.Id" class="btn btn-danger">Sil</a></th>
    <th><a href="/Admin/CommetGet/@x.Id" class="btn btn-warning"> Güncelle</a></th>
</tr>
    }
</table>

