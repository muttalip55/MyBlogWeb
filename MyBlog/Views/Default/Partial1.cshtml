@using MyBlog.Models.Classes
@model List<Blog>

<div class="con-bot">


    @foreach(var x in Model) {
            
    <div style="width:29%;float:left;" class="left">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" style="width:350px; height:150px;" />
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd:MM:yyyy")</span>
            <p>@x.Explanation.Substring(0,80) ...</p>
            <p><a href="/Blog/BlogDetail/@x.Id"><span class="read">Devamını Oku >></span></a></p>
        </div>
    </div>

    }
    <div class="clear"></div>
</div>