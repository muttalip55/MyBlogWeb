
@using MyBlog.Models.Classes
@model List<Blog>

<div class="padding">
    <h4>En iyi 10 Yer</h4>
    <ul class="list list-pad">
        @{int i = 0; }
        @foreach (var x in Model)
        {

            <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetail/@x.Id">@x.Baslik</a></li>
        }
    </ul>
    <a href="/Blog/Index" class="link1">Bütün Blogları görüntüle</a>
</div>