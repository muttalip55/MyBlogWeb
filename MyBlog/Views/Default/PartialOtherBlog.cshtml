@using MyBlog.Models.Classes
@model List<Blog>


<div class="padding1">
    <h4>En Son Bloglar</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <a href="/Blog/BlogDetail/@x.Id"> <img src="@x.BlogImage" alt="" style="width:100px; height:100px;" /></a>
            </div>
            <div class="bot-desc">
                <p>@x.Explanation.Substring(0, 80) ...</p>
            </div>
            <div class="clear"></div>
        }
    </div>

    @Html.Action("PartialOther2Blog" , "Default")
 

</div>